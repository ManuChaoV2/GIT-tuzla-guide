{
  "name": "tuzla-guide",
  "version": "1.0.0",
  "description": "Tuzla Guide - Decentralized Tourism App on Internet Computer",
  "keywords": ["ICP", "Internet Computer", "React", "Motoko", "Tourism", "Tuzla"],
  "scripts": {
    "setup": "npm install && dfx deploy --playground && npm run generate",
    "start": "vite --mode development",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "frontend": "vite --mode development",
    "backend": "mo-dev --generate --deploy --test",
    "build": "tsc && vite build",
    "generate": "dfx generate backend",
    "deploy:local": "dfx deploy",
    "deploy:ic": "dfx deploy --network ic",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@dfinity/agent": "^1.0.0",
    "@dfinity/auth-client": "^1.0.0",
    "@dfinity/candid": "^1.0.0",
    "@dfinity/principal": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "vite": "^4.0.0",
    "mapbox-gl": "^2.15.0",
    "react-map-gl": "^7.1.0",
    "i18next": "^23.0.0",
    "react-i18next": "^13.0.0",
    "howler": "^2.2.3",
    "qrcode.react": "^3.1.0",
    "axios": "^1.4.0",
    "workbox-webpack-plugin": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-precaching": "^7.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/mapbox-gl": "^2.7.0",
    "@types/howler": "^2.2.7",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "typescript": "^5.0.0",
    "concurrently": "^8.0.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "@ic-reactor/core": "^1.0.0",
    "@ic-reactor/react": "^1.0.0",
    "mo-dev": "^0.9.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}